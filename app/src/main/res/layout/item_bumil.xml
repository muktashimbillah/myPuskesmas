<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg_buttonmenu"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/tv_nama_bumil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Santi Rahma"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        android:textSize="14sp"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- Baris 1 -->
        <TableRow
            android:id="@+id/rowTanggalLahir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="15dp"
                android:text="Tanggal Lahir"/>
            <TextView
                android:text=":"
                android:gravity="center" />
            <TextView
                android:id="@+id/tanggalLahir"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Surabaya, 11 januari 2023" />
        </TableRow>
        <TableRow
            android:id="@+id/rowJenisKelamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="15dp"
                android:text="Usia Kandungan"/>
            <TextView
                android:text=":"
                android:gravity="center" />
            <TextView
                android:id="@+id/usiaKandungan"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="20 minggu" />
        </TableRow>
        <TableRow
            android:id="@+id/rowAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="15dp"
                android:text="Alamat"/>
            <TextView
                android:text=":"
                android:gravity="center" />
            <TextView
                android:id="@+id/alamat"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="Rungkut Tengah Surabaya" />
        </TableRow>
        <TableRow
            android:id="@+id/rowBeratBadan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingRight="15dp"
                android:text="Berat Badan"/>
            <TextView
                android:text=":"
                android:gravity="center" />
            <TextView
                android:id="@+id/beratBadan"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="68 kg" />
        </TableRow>

    </TableLayout>


</LinearLayout>