<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu.formData.FormInputanActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_right" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:text="Riwayat Laporan"
                        android:textSize="15dp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/linearLayout">
            <LinearLayout
                android:padding="10dp"
                android:background="@drawable/bg_buttonmenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bintang Sesillia"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- Baris 1 -->
                    <TableRow
                        android:id="@+id/rowTanggalLahir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingRight="15dp"
                            android:text="Tanggal Lahir"/>
                        <TextView
                            android:text=":"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/tanggalLahir"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:text="Surabaya, 11 januari 2023" />
                    </TableRow>
                    <TableRow
                        android:id="@+id/rowJenisKelamin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingRight="15dp"
                            android:text="Jenis Kelamin"/>
                        <TextView
                            android:text=":"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/jenisKelamin"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:text="Perempuan" />
                    </TableRow>
                    <TableRow
                        android:id="@+id/rowAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingRight="15dp"
                            android:text="Alamat"/>
                        <TextView
                            android:text=":"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/alamat"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:text="Gunung Anyar Surabaya" />
                    </TableRow>
                    <TableRow
                        android:id="@+id/rowTinggiBadan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingRight="15dp"
                            android:text="Tinggi Badan"/>
                        <TextView
                            android:text=":"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/tinggiBadan"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:text="Perempuan" />
                    </TableRow>
                    <TableRow
                        android:id="@+id/rowBeratBadan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:paddingRight="15dp"
                            android:text="Berat Badan"/>
                        <TextView
                            android:text=":"
                            android:gravity="center" />
                        <TextView
                            android:id="@+id/beratBadan"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:text="6,8 kg" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>